{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "cleanupPeriodDays": 1095,
  "env": {},
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(cat:*)",
      "Bash(cp:*)",
      "Bash(diff:*)",
      "Bash(echo:*)",
      "Bash(find:*)",
      "Bash(gh issue list:*)",
      "Bash(gh issue view:*)",
      "Bash(gh pr checkout:*)",
      "Bash(gh pr checks:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr view:*)",
      "Bash(gh search:*)",
      "Bash(git add:*)",
      "Bash(git branch:*)",
      "Bash(git checkout:*)",
      "Bash(git commit:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git pull:*)",
      "Bash(git show:*)",
      "Bash(git status:*)",
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(rg:*)",
      "Bash(say:*)",
      "Bash(touch:*)",
      "Bash(tree:*)",
      "WebFetch(domain:github.com)",
      "Write(*)"
    ],
    "deny": [
      "Bash(chmod 777 /*)",
      "Bash(chown root:*)",
      "Bash(curl:*)",
      "Bash(docker system prune:*)",
      "Bash(git commit --amend:*)",
      "Bash(git push -f:*)",
      "Bash(git rebase:*)",
      "Bash(git reset:*)",
      "Bash(rm -rf /)",
      "Bash(rm -rf /*)",
      "Bash(rm -rf ~)",
      "Bash(rm -rf ~/*)",
      "Bash(rm -rf:*)",
      "Bash(sudo:*)",
      "Read(**/*credentials*)",
      "Read(**/*key*)",
      "Read(**/*secret*)",
      "Read(**/.env)",
      "Read(**/.env.development)",
      "Read(**/.env.local)",
      "Read(**/.env.production)",
      "Read(.env)",
      "Read(.env.development)",
      "Read(.env.local)",
      "Read(.env.production)",
      "Read(id_rsa)",
      "Write(**/.env)",
      "Write(**/.env.development)",
      "Write(**/.env.local)",
      "Write(**/.env.production)",
      "Write(.env)",
      "Write(.env.development)",
      "Write(.env.local)",
      "Write(.env.production)"
    ],
    "ask": [
      "Bash(rm:*)",
      "Bash(wget:*)",
      "Bash(curl:*)",
      "Bash(git add -A:*)"
    ],
    "defaultMode": "plan"
  },
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "osascript -e 'display notification \"作業完了\" with title \"Claude Code\" sound name \"Ping\"'"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "osascript -e 'display notification \"セッション終了\" with title \"Claude Code\" sound name \"Hero\"'"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bash ~/.claude/statusline-command.sh"
  },
  "enabledPlugins": {
    "lua-lsp@claude-plugins-official": false,
    "typescript-lsp@claude-plugins-official": false,
    "code-review@claude-plugins-official": true,
    "code-simplifier@claude-plugins-official": true,
    "pr-review-toolkit@claude-plugins-official": true,
    "claude-md-management@claude-plugins-official": true,
    "claude-code-setup@claude-plugins-official": true,
    "customaize-agent@context-engineering-kit": false,
    "superpowers@claude-plugins-official": true,
    "serena@claude-plugins-official": true
  },
  "language": "Japanese",
  "feedbackSurveyState": {
    "lastShownTime": 1754040541141
  }
}
